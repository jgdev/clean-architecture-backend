{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",
    "lib": ["es6", "DOM"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": ["src/**/*.ts", "./env.d.ts", "../prisma"],
  "exclude": ["node_modules"]
}
